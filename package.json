{
  "name": "commix",
  "displayName": "CommiX",
  "description": "AI-powered commit message generator & coding assistant. AI Edit, Refactor, Explain, and Convert tools, featuring CodeLens, Inline Suggestions, and Diff-based Previews — powered by OpenAI, Gemini, and NVIDIA.",
  "version": "5.1.1",
  "engines": {
    "node": ">=16",
    "vscode": "^1.106.2"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "AI",
    "OpenAI",
    "Azure",
    "Gemini",
    "DeepSeek",
    "Git",
    "Git Commit",
    "Commit Message",
    "Commit Generator",
    "Conventional Commits",
    "Gitmoji",
    "Commit Assistant",
    "Semantic Commit",
    "Auto Commit",
    "Code Review",
    "CommiX"
  ],
  "publisher": "paswans05",
  "repository": "https://github.com/paswans05/commix.git",
  "icon": "assets/images/logo.png",
  "activationEvents": [
    "onCommand:commix"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.commix",
        "icon": {
          "dark": "assets/images/icon.svg",
          "light": "assets/images/icon.svg"
        },
        "title": "CommiX"
      },
      {
        "command": "commix.showAvailableModels",
        "title": "Show Available OpenAI Models"
      },
      {
        "command": "commix.aiEdit",
        "title": "CommiX: $(edit) AI Edit / Refactor"
      },
      {
        "command": "commix.aiExplain",
        "title": "CommiX: $(output) Explain Code"
      },
      {
        "command": "commix.aiConvert",
        "title": "CommiX: $(sync) Convert Code"
      },
      {
        "command": "commix.aiSnippet",
        "title": "CommiX: $(code) Generate Snippet"
      },
      {
        "command": "commix.aiTest",
        "title": "CommiX: $(beaker) Generate Test"
      },
      {
        "command": "commix.aiDoc",
        "title": "CommiX: $(book) Generate Documentation"
      },
      {
        "command": "commix.aiWorkflow",
        "title": "CommiX: $(list-ordered) Run AI Workflow"
      },
      {
        "command": "commix.saveTemplate",
        "title": "CommiX: $(save) Save as Template"
      },
      {
        "command": "commix.insertTemplate",
        "title": "CommiX: $(layout) Insert Template"
      }
    ],
    "configuration": {
      "properties": {
        "commix.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Enable/Disable CodeLens (AI Edit/Explain icons above functions)"
        },
        "commix.AI_LANGUAGE": {
          "default": "English",
          "description": "Commit message language",
          "enum": [
            "Japanese",
            "Korean",
            "Czech",
            "German",
            "French",
            "Italian",
            "Dutch",
            "Portuguese",
            "Vietnamese",
            "English",
            "Spanish",
            "Swedish",
            "Russian",
            "Bahasa",
            "Polish",
            "Turkish",
            "Thai",
            "Hindi"
          ],
          "enumDescriptions": [
            "にほんご",
            "한국어",
            "česky",
            "Deutsch",
            "française",
            "italiano",
            "Nederlands",
            "português",
            "tiếng Việt",
            "english",
            "español",
            "Svenska",
            "русский",
            "bahasa",
            "Polski",
            "Turkish",
            "ไทย",
            "हिन्दी"
          ],
          "type": "string"
        },
        "commix.API_VERSION": {
          "default": "",
          "description": "API VERSION",
          "type": "string"
        },
        "commix.OPENAI_API_KEY": {
          "default": "",
          "description": "OpenAI API Key",
          "type": "string"
        },
        "commix.OPENAI_BASE_URL": {
          "default": "",
          "description": "OpenAI BASE URL",
          "type": "string"
        },
        "commix.OPENAI_MODEL": {
          "default": "gpt-4o",
          "description": "OpenAI MODEL, you can select a model from the list by running the 'Show Available OpenAI Models' command",
          "type": "string"
        },
        "commix.PROMPT_SNIPPET": {
          "type": "string",
          "default": "",
          "description": "Custom system prompt for AI Snippet Generator"
        },
        "commix.PROMPT_TEST": {
          "type": "string",
          "default": "",
          "description": "Custom system prompt for AI Test Generator"
        },
        "commix.PROMPT_DOC": {
          "type": "string",
          "default": "",
          "description": "Custom system prompt for AI Documentation Builder"
        },
        "commix.SYSTEM_PROMPT": {
          "type": "string",
          "default": "",
          "description": "Custom system prompt for generating commit messages"
        },
        "commix.OPENAI_TEMPERATURE": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "OpenAI temperature setting (0-2). Higher values make output more random, lower values more deterministic."
        },
        "commix.AI_PROVIDER": {
          "type": "string",
          "default": "openai",
          "description": "AI Provider to use (OpenAI , Gemini and NVIDIA)",
          "enum": [
            "openai",
            "gemini",
            "nvidia",
            "groq",
            "ollama"
          ]
        },
        "commix.GEMINI_API_KEY": {
          "type": "string",
          "default": "",
          "description": "Gemini API Key"
        },
        "commix.GEMINI_MODEL": {
          "type": "string",
          "default": "gemini-2.5-flash",
          "description": "Gemini Model to use",
          "enum": [
            "gemini-2.5-flash",
            "gemini-2.5-pro",
            "gemini-2.0-flash",
            "gemini-3-flash-preview",
            "gemini-1.5-flash-latest"
          ],
          "enumDescriptions": [
            "Gemini 2.5 Flash (Current stable fast model)",
            "Gemini 2.5 Pro (Current stable high-intelligence model)",
            "Gemini 2.0 Flash (Stable 2.0 series)",
            "Gemini 3 Flash Preview (Next-gen preview)",
            "Gemini 1.5 Flash Latest (Latest 1.5 series)"
          ]
        },
        "commix.GEMINI_TEMPERATURE": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "Gemini temperature setting (0-2). Controls randomness."
        },
        "commix.NVIDIA_API_KEY": {
          "type": "string",
          "default": "",
          "description": "NVIDIA API Key. Get your key from: https://build.nvidia.com → Sign in → API Keys → Create Key."
        },
        "commix.NVIDIA_MODEL": {
          "type": "string",
          "default": "meta/llama-3.1-70b-instruct",
          "description": "Select the NVIDIA-hosted model for AI generation",
          "enum": [
            "meta/llama-3.1-70b-instruct",
            "meta/llama-3.1-8b-instruct",
            "google/gemma-2-9b-it",
            "microsoft/phi-3.5-mini-instruct",
            "nvidia/llava-llama3-8b",
            "nvidia/nv-embedqa-e5-v5",
            "qwen2.5-7b-instruct",
            "qwen2.5-72b-instruct",
            "deepseek-r1",
            "deepseek-coder-v2-lite"
          ],
          "enumDescriptions": [
            "LLaMA 3.1 70B — Best quality, strong reasoning, ideal for coding + conversation.",
            "LLaMA 3.1 8B — Fast, light, cheaper; great for general tasks.",
            "Gemma 2 9B — High-quality mid-size model with strong creativity and reasoning.",
            "Phi-3.5 Mini — Ultra-fast and cost-efficient, best for lightweight tasks.",
            "NVIDIA LLava Vision — Supports image + text inputs for multimodal tasks.",
            "NVIDIA NV-Embed — Embedding model for semantic search & RAG pipelines.",
            "Qwen 2.5 7B — Strong coding + reasoning in a compact size.",
            "Qwen 2.5 72B — Very high accuracy, strong reasoning and code generation.",
            "DeepSeek R1 — Advanced reasoning model (RL based), great for deep problem solving.",
            "DeepSeek Coder V2 Lite — Fast, optimized model for code generation."
          ]
        },
        "commix.GROQ_API_KEY": {
          "type": "string",
          "default": "",
          "description": "Groq API Key"
        },
        "commix.GROQ_MODEL": {
          "type": "string",
          "default": "llama3-70b-8192",
          "description": "Groq Model to use (e.g., llama3-70b-8192, mixtral-8x7b-32768)"
        },
        "commix.OLLAMA_BASE_URL": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Base URL for Ollama (e.g., http://localhost:11434)"
        },
        "commix.OLLAMA_MODEL": {
          "type": "string",
          "default": "llama3",
          "description": "Ollama Model to use (e.g., llama3, mistral, phi)"
        }
      },
      "title": "CommiX"
    },
    "menus": {
      "scm/title": [
        {
          "command": "extension.commix",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "commix.aiEdit",
          "group": "commix-group@1",
          "when": "editorHasSelection"
        },
        {
          "command": "commix.aiExplain",
          "group": "commix-group@2",
          "when": "editorHasSelection"
        },
        {
          "command": "commix.aiConvert",
          "group": "commix-group@3",
          "when": "editorHasSelection"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "commix-sidebar",
          "title": "CommiX",
          "icon": "assets/images/icon.svg"
        }
      ]
    },
    "views": {
      "commix-sidebar": [
        {
          "type": "webview",
          "id": "commix.sidebarView",
          "icon": "assets/images/icon.svg",
          "name": "CommiX"
        }
      ]
    }
  },
  "main": "./dist/extension.js",
  "scripts": {
    "build": "webpack --mode production --devtool hidden-source-map",
    "compile": "webpack",
    "compile-tests": "tsc -p . --outDir out",
    "lint": "eslint src --ext ts",
    "package": "vsce package --no-dependencies",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "publish": "vsce publish --no-dependencies",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "npm run build",
    "watch": "webpack --watch",
    "watch-tests": "tsc -p . -w --outDir out"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "fs-extra": "^11.0.4",
    "openai": "^4.14.2",
    "simple-git": "^3.17.0"
  },
  "resolutions": {
    "@types/node": "16.x"
  },
  "license": "MIT"
}
